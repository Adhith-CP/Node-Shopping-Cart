<h1>{{title}}</h1>
<p>Welcome to the {{title}}</p>

<div class="row ">
  <!-- Start of loop -->
  {{#each products}}
  <div class="col-12 col-md-4 col-lg-3 col-xl-2 ">
    <div class="thumbnail container-fluid">
      <img src="{{this.imageURL}}" alt="{{this.title}}">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description">{{{this.description}}}</p>
        <div class="clearfix">
          <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} CHF</div>
          <a href="/add/{{ this.id }}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
        </div>
      </div>
    </div>
  </div>
  <!-- End of loop -->
  {{/each}}
</div>
